<page id="start" bg_image="tech-bg-lab.png" bg_music="osts-vilo.mp3">
  <agent
    id="teste"
    text="Hello World"
    color="white"
    x="center"
    y="center"
    font-size="70"
  />
  <agent
      id="btn-invisible"
      text=" "
      x="400"
      y="400"
      width="30"
      height="30"
      on_click="set(contador, $contador + 1)"
    />
 <fab-if when="$contador = 1">
    <agent
      id="pontuacao"
      text="+1"
      color="white"
      x="90"
      y="90"
      font-size="70"
      on_click="set($pontuacao + 1)"/>
</fab-if>
<print($pontuacao)
  <agent
    id="next_page_text"
    text="Proxima Pagina"
    animation="glitch"
    y="480"
    x="640"
    on_click="goToPage('middle')"
  />
</page>