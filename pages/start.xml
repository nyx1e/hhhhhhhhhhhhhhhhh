<page id="start" bg_image="tech-bg-lab.png" bg_music="osts-vilo.mp3">
  <agent
    id="teste"
    text="Hello World"
    color="white"
    x="center"
    y="center"
    font-size="70"
  />
  <agent
      id="btn-invisible"
      text=" "
      width="32"
      height="32"
      on_click="set(contador, $contador + 1)"
    />
 <agent id="pontuação=0" />
<fab-if when="$contador=1">
  <agent id="pontuação+1"
    />

  <agent
    id="next_page_text"
    text="Proxima Pagina"
    animation="glitch"
    y="480"
    x="640"
    on_click="goToPage('middle')"
  />
</page>